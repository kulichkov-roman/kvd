@require "partials/fonts.styl"
@require "mixins/variables.styl"
@require "mixins/layout.styl"
@require "partials/small.reset.styl"
@require "partials/sprite.styl"

html
	height 100%
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%

html,
body
	height 100%
	margin 0
	padding 0
	background #fff
	min-width 320px
	font-family HelveticaNeueCyr


.wrapper
	min-height 100%
	height auto !important
	height 100%
	overflow hidden


.container
	width $desktopContentWidth
	margin 0 auto
	position relative


.box
	&__title
		font-weight bold
		text-transform uppercase

		&-slash
			position absolute

		&-move-right
			position relative
			left: 14px


.brand
	border-top 1px solid #fff
	background #dddedd url(../images/brand-bg.jpg) no-repeat 50% 0
	height 612px

	&__title
		font-size 69px
		line-height 64px
		padding 75px 0 0 173px
		color #333e48

		&-slash
			margin-left -32px

	&__color
		color #f0006d

	&__text
		padding 35px 0 0 179px
		color: #333e48
		line-height: 32px
		font-size 18px
		width 740px


.projects
	background #333e48
	height 867px

	&__title
		font-size 68px
		line-height 65px
		padding 107px 0 0 173px
		color #fff

		&-slash
			margin-left -32px

	&__color
		color #fa5a08

	&__video
		padding 47px 0 0 178px


.clients
	background #fff
	height 427px

	&__title
		font-size 68px
		line-height 65px
		padding 94px 0 0 173px
		color #333e48

		&-slash
			margin-left -32px

	&__color
		color #f0006d

	&__content
		width 1010px
		padding 62px 0 0 176px


.momentum
	background #121312 url(../images/momentum-bg.jpg) no-repeat 50% 0
	height 957px

	&__title
		font-size 68px
		line-height 65px
		padding 117px 0 0 173px
		color #fff

		&-slash
			margin-left -32px

		&--2
			padding-top 67px

	&__color-1
		color #31e7ff

	&__color-2
		color #8acfb3

	&__subtitle
		font-size 27px
		line-height 30px
		font-weight bold
		text-transform uppercase
		padding 14px 0 0 191px

	&__image
		position absolute
		margin 182px 0 0 676px

		&-img
			&--gray
				display block
			&--color
				display none

		&:hover
			.momentum__image-img--gray
				display none
			.momentum__image-img--color
				display block

	&__text
		width 640px
		font-size 14px
		line-height 22px
		color #fff
		padding 10px 0 0 180px


.contacts
	background #333e48 url(../images/contacts-bg.jpg) no-repeat 50% 0
	height 804px

	&__title
		font-size 68px
		line-height 65px
		padding 123px 0 0 173px
		color #fff

		&-slash
			margin-left -32px

	&__color
		color #d0eb09

	&__box
		margin: 132px 0 0 426px
		width 330px
		background #fff
		padding 35px 38px 40px

		&-title
			font-size 24px
			font-weight bold
			text-transform uppercase

		&-text
			font-size 14px
			line-height 20px
			margin-top 6px

		&-button
			margin-top 26px

		&:after
			content ''
			display block
			width: 0;
			height: 0;
			border-style: solid;
			border-width: 10px 12.5px 0 12.5px;
			border-color: #ffffff transparent transparent transparent;
			position absolute
			margin 40px 0 0 115px

	&__form
		color: #000
		display block
		padding 30px

		&-wrapper
			display none

		&-title
			font-size 24px
			font-weight bold
			text-transform uppercase

		&-row
			margin-top: 15px


.prefooter
	padding 0 0 $desktopFooterHeight 0


@media screen and (max-width: ($desktopContentWidth - 1))

	.container
		width $tabletContentWidth

	.brand
		height auto
		padding: 50px 0

		&__title
			padding 0 0 0 100px
			font-size: 60px
			line-height: 100%

		&__text
			width 100%
			padding 15px 30px 0 100px

	.projects
		height auto

		&__title
			padding 50px 0 0 100px
			font-size: 50px
			line-height: 90%

		&__video
			width 100%
			padding 15px 30px 50px 100px

			iframe
				width 600px
				height 337px

			&-img
				width 100%
				height auto

	.clients
		height auto

		&__title
			padding 50px 0 0 100px
			font-size 50px
			line-height 90%

		&__content
			width auto
			padding 30px 30px 10px 30px

	.momentum
		height auto
		padding 0 0 50px 0

		&__image
			margin 52px 0 0 460px

		&__title
			padding 50px 0 0 100px
			font-size 50px
			line-height 90%

		&__subtitle
			padding 0 0 0 100px

		&__text
			width 100%
			padding 30px 30px 0 100px
			font-size 16px
			line-height 18px

	.contacts
		background-image none
		height auto

		&__title
			font-size 40px
			line-height 90%
			padding 50px 0 0 100px

		&__box
			margin 30px 0 0 100px


@media screen and (max-width: ($tabletContentWidth - 1))

	.container
		width 100%
		min-width $mobileContentWidth

	.box__title-move-right
		left: 0

	.brand
		height auto
		background-image none
		padding 0

		&__title
			padding 30px 0 0 15px
			font-size 33px
			line-height 35px

		&__text
			width 100%
			padding 15px 15px 30px 15px
			font-size 15px
			line-height 18px

	.projects
		height auto

		&__title
			padding 30px 0 0 15px
			font-size 30px
			line-height 33px

		&__video
			width 100%
			padding 15px 15px 30px 15px

			iframe
				width 290px
				height 163px

	.clients
		height auto

		&__title
			padding 30px 0 0 15px
			font-size 30px
			line-height 33px

		&__content
			width auto
			padding 15px

	.momentum
		background-image none
		height auto
		padding 0 0 30px 0

		&__image
			position static
			margin 0
			padding 30px 15px 0 15px

		&__title
			padding 15px 0 0 15px
			font-size 30px
			line-height 33px

		&__subtitle
			padding 0 0 0 15px

		&__text
			width 100%
			padding 15px 15px 0 15px
			font-size 15px
			line-height 18px

	.contacts
		background-image none
		height auto

		&__title
			font-size 30px
			line-height 33px
			padding 30px 0 0 15px

		&__box
			margin 0
			background transparent
			padding 15px 15px 30px 15px
			color: #fff


@require "partials/**/*.styl"
