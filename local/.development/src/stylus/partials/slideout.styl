@require "../mixins/variables.styl"

.slideout-menu
	position fixed
	left 0
	top 0
	bottom 0
	right 0
	z-index 0
	width 256px
	overflow-y auto
	-webkit-overflow-scrolling touch
	display none
	background #333e48
	box-shadow inset 0 0 10px #191e23

.slideout-panel
	position relative
	z-index 1
	// will-change transform
	background #fff

.slideout-open,
.slideout-open body,
.slideout-open .slideout-panel
	overflow hidden

.slideout-open .slideout-menu
	display block

.slideout-toggle-button
	display none
	float left
	margin 15px 0 0 15px
	cursor pointer
	retinaSprite($slideout_toggle_button_group)


.left-menu
	padding 15px

	&__title
		text-transform uppercase
		font-size 18px
		font-weight bold
		color #fff

	&__list
		margin-top 15px

	&__item
		display block
		margin-top 10px
		text-transform uppercase
		font-size 14px
		font-weight bold
		text-decoration none
		color #fff

		&:hover,
		&--active
			color #31e7ff

@media screen and (max-width: ($desktopContentWidth - 1))
	// 

@media screen and (max-width: ($tabletContentWidth - 1))
	.slideout-toggle-button
		display block
